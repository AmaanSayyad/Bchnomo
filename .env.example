# =============================================================================
# WALLETCONNECT (Required for ConnectKit / Wagmi on Arbitrum Sepolia)
# =============================================================================
# Get a project ID at https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# =============================================================================
# PRIVY CONFIGURATION
# =============================================================================
# From https://dashboard.privy.io
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id
# Backend only - secure this!
PRIVY_APP_SECRET=your-privy-app-secret

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME=Arbnomo
NEXT_PUBLIC_ROUND_DURATION=30
NEXT_PUBLIC_PRICE_UPDATE_INTERVAL=1000
NEXT_PUBLIC_CHART_TIME_WINDOW=300000

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# ARBITRUM SEPOLIA CONFIGURATION
# =============================================================================
NEXT_PUBLIC_ARB_NETWORK=arbitrumSepolia
NEXT_PUBLIC_ARB_RPC_ENDPOINT=https://sepolia-rollup.arbitrum.io/rpc
# Treasury address for deposits/withdrawals
NEXT_PUBLIC_ARB_TREASURY_ADDRESS=0x0000000000000000000000000000000000000000
# Treasury private key (Backend only - secure this!)
ARB_TREASURY_SECRET_KEY=your-arb-treasury-secret-key
